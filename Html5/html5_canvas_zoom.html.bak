<!DOCTYPE HTML>
<html>
<head>
	<title>Html5 Canvas Images Zoom in/out</title>
	<script src="http://yui.yahooapis.com/2.8.2r1/build/yahoo-dom-event/yahoo-dom-event.js"></script>	
</head>
<body>
<div><span id="out">+</span>&nbsp;&nbsp;<span id="in">-</span></div>
<canvas id="c" height="300" width="400"></canvas>
<script type="text/javascript">
    var Dom = YAHOO.util.Dom;
    var Event = YAHOO.util.Event;
	var c = document.getElementById('c');//取得Dom元素
    var context = c.getContext("2d");//拿到Canvas的上下文 目前好像只支持2D渲染
	var img = new Image();  //创建一个image的对象
	img.src = 'images/map.jpg';
	context.drawImage(img,10,10);
	
	Event.addListener("out",'mouseover',function(e){
		c.style.width="500px";
		c.style.height="500px";
	});

	Event.addListener("in",'mouseout',function(e){
		c.style.width="300px";
		c.style.height="300px";
	});

</script>
</body>
</html>